<style>


  body {
    background: #FFF
  }
</style>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Student ID</th>
      <th scope="col">Area of interest</th>
    </tr>
  </thead>
  <tbody>
    <% @user.each do |user|%>
      <tr>
        <th scope="row"><%=user.id%></th>
        <td><%=user.first_name%></td>
        <td><%=user.student_id_number%></td>
        <td><%=user.area_interest%></td>
        <td class="list_actions"><%= link_to 'Show', user %><br/></td>
      </tr>
    <%end%>
  </tbody>
</table>